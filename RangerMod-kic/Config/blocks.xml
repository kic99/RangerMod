<!-- kic's RangerMod ver .3 -->
<configs>


<append xpath="/blocks">

<!-- ### chests for buried quests -->    
    
<block name="cntBuriedLootStashTalon1Chest">
	<property name="Extends" value="cntLootChestHero" param1="DescriptionKey"/>
	<property name="CreativeMode" value="None"/>
	<property name="Tags" value="buriedTreasure,door"/>
	<property name="CustomIcon" value="cntLootChestHero"/>
	<property name="CustomIconTint" value="FFBF00"/>
	<property name="TintColor" value="804141"/>
	<property name="IsTerrainDecoration" value="true"/>
	<property name="LootList" value="treasure_talonstash1"/>
	<property name="DowngradeBlock" value="cntBuriedLootStashTalon1ChestInsecure"/>
	<property name="FilterTags" value="MC_helpers,SC_questblocks"/>
</block>

